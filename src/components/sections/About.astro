---
// About Section Component

import { getAboutContent } from "@/lib/tina";

// Load content from Tina CMS
const content = getAboutContent();

const label = content?.label || "About Us";
const title = content?.title || "Excellence in Every";
const titleHighlight = content?.titleHighlight || "Brushstroke";
const paragraphs = content?.paragraphs || [];
const image = content?.image || "https://images.unsplash.com/photo-1589939705384-5185137a7f0f?q=80&w=1000";
const imageAlt = content?.imageAlt || "Professional painting team at work";
const stats = content?.stats || [];
---

<section id="about" class="py-24 px-6 bg-muted/30">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-2 gap-16 items-center">
      <!-- Content Column -->
      <div class="space-y-6">
        <div class="inline-block">
          <span class="text-sm font-medium tracking-wider text-muted-foreground uppercase">
            {label}
          </span>
          <div class="h-px bg-primary w-16 mt-2"></div>
        </div>

        <h2 class="text-4xl md:text-5xl font-display font-bold tracking-tight">
          {title}
          <span class="block">{titleHighlight}</span>
        </h2>

        <div class="space-y-4 text-muted-foreground leading-relaxed">
          {paragraphs.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>

      <!-- Image Column -->
      <div class="relative">
        <div class="aspect-square relative overflow-hidden rounded-sm">
          <img
            src={image}
            alt={imageAlt}
            class="object-cover w-full h-full grayscale hover:grayscale-0 transition-all duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-primary/20 to-transparent"></div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-3 gap-4 mt-8">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-3xl font-display font-bold" set:html={stat.value.includes('+') ? stat.value.replace('+', '<span class="text-primary">+</span>') : stat.value.replace('%', '<span class="text-primary">%</span>')} />
              <div class="text-sm text-muted-foreground mt-1">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
