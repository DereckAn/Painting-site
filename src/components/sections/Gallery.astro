<section id="gallery" class="py-24 px-6 bg-muted/30">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-sm font-medium tracking-wider text-muted-foreground uppercase">
        Portfolio
