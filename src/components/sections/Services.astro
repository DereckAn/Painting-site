---

<section id="services" class="py-24 px-6 bg-background">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-sm font-medium tracking-wider text-muted-foreground uppercase">
        Services
      </span>
      <h2 class="text-4xl md:text-5xl font-display font-bold mt-4 tracking-tight">
        Our Specialties
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service) => (
        <div class="group relative p-8 bg-card hover:bg-muted/50 transition-all duration-300 rounded-sm border border-border hover:border-primary/20 hover:shadow-lg">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
                <div class="text-primary group-hover:text-primary-foreground transition-colors" set:html={icons[service.icon]} />
              </div>
            </div>

            <div>
              <h3 class="text-xl font-display font-semibold mb-3 group-hover:text-primary transition-colors">
                {service.title}
              </h3>
              <p class="text-muted-foreground leading-relaxed">
                {service.description}
              </p>
            </div>
          </div>

          <!-- Decorative line -->
          <div class="absolute bottom-0 left-0 h-0.5 bg-primary w-0 group-hover:w-full transition-all duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>
