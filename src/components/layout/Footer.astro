---
/**
 * Footer Component
 * Company footer with navigation, social links, and contact information
 */
import { getFooterContent } from "@/lib/tina";

import { Image } from "astro:assets";
import logo from "@/assets/logo.svg";

// Load content from Tina CMS (or use default values)
const content = getFooterContent?.() || {};

const companyName = content?.companyName || "MarinUs";
const menuLinks = content?.menuLinks || [
  { label: "ABOUT", href: "#about" },
  { label: "SERVICES", href: "#services" },
  { label: "INSIGHTS", href: "#insights" },
  { label: "CONTACT", href: "#contact" },
];

const socialLinks = content?.socialLinks || [
  { label: "FACEBOOK", href: "#", icon: "facebook" },
  { label: "INSTAGRAM", href: "#", icon: "instagram" },
  { label: "LINKEDIN", href: "#", icon: "linkedin" },
];

const contactInfo = content?.contactInfo || {
  email: "info@marinus.com",
  phone: "0412 054 507",
};

const legalLinks = content?.legalLinks || [
  { label: "PRIVACY POLICY", href: "#privacy" },
  { label: "TERMS & CONDITIONS", href: "#terms" },
];
---

<footer class="bg-black text-white border-t border-border">
  <div class="px-6 py-16">
    <!-- Top Section -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 mb-16 ">
      <!-- Logo -->
      <div class="md:col-span-7">
        <a href="/" class="inline-block group">
          <Image src={logo} alt="MarinUs Logo" class={"invert max-w-56"}  />
        </a>
      </div>

      <!-- Menu -->
      <div class="">
        <h3
          class="text-xs font-medium tracking-wider text-muted-foreground mb-6"
        >
          MENU
        </h3>
        <nav>
          <ul class="space-y-3">
            {
              menuLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm font-medium hover:text-primary transition-colors duration-300 uppercase tracking-wide relative inline-block after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-current after:transition-all after:duration-300 hover:after:w-full"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Social -->
      <div class="">
        <h3
          class="text-xs font-medium tracking-wider text-muted-foreground mb-6"
        >
          SOCIAL
        </h3>
        <nav>
          <ul class="space-y-3">
            {
              socialLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm font-medium hover:text-primary transition-colors duration-300 uppercase tracking-wide relative inline-block after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-current after:transition-all after:duration-300 hover:after:w-full"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Contact -->
      <div class="md:col-span-3">
        <h3
          class="text-xs font-medium tracking-wider text-muted-foreground mb-6"
        >
          CONTACT
        </h3>
        <div class="space-y-3">
          <a
            href={`mailto:${contactInfo.email}`}
            class="block text-sm font-medium hover:text-primary transition-colors duration-300 uppercase tracking-wide break-all relative inline-block after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-current after:transition-all after:duration-300 hover:after:w-full"
          >
            {contactInfo.email}
          </a>
          <a
            href={`tel:${contactInfo.phone.replace(/\s/g, "")}`}
            class="block text-sm font-medium hover:text-primary transition-colors duration-300 uppercase tracking-wide relative inline-block after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-current after:transition-all after:duration-300 hover:after:w-full"
          >
            {contactInfo.phone}
          </a>
        </div>
      </div>
    </div>

    <!-- Brand Name Section -->
    <div class="relative overflow-hidden">
      <h2
        class="text-[6rem] sm:text-[8rem] md:text-[12rem] lg:text-[16rem] xl:text-[20rem] 2xl:text-[27rem] text-center font-bold leading-none tracking-tighter break-all"
      >
        {companyName}
      </h2>
    </div>

    <!-- Legal Links -->
    <div class="border-t border-border pt-8">
      <div
        class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"
      >
        <p class="text-xs text-muted-foreground">
          Â© {new Date().getFullYear()}
          {companyName}. All rights reserved.
        </p>
        <nav>
          <ul class="flex flex-wrap gap-6">
            {
              legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-xs font-medium text-muted-foreground hover:text-foreground transition-colors duration-300 uppercase tracking-wider relative inline-block after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-current after:transition-all after:duration-300 hover:after:w-full"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>
