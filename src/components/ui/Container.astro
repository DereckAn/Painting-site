---
/**
 * Container Component
 * Contenedor responsive con padding y max-width consistente
 */

interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
  padding?: boolean;
}

const {
  class: className = '',
  maxWidth = 'xl',
  padding = true,
} = Astro.props;

const maxWidthStyles = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
  '2xl': 'max-w-screen-2xl',
  full: 'max-w-full',
};

const paddingStyles = padding ? 'px-6 md:px-8 lg:px-12' : '';

const classes = `mx-auto w-full ${maxWidthStyles[maxWidth]} ${paddingStyles} ${className}`.trim();
---

<div class={classes}>
  <slot />
</div>
