---
/**
 * Textarea Component
 * Reusable textarea field component
 */

interface Props {
  name?: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  rows?: number;
  value?: string;
  class?: string;
}

const {
  name,
  id,
  placeholder,
  required = false,
  disabled = false,
  rows = 4,
  value,
  class: className = '',
} = Astro.props;

const baseStyles = 'w-full px-4 py-3 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed resize-none';

const classes = `${baseStyles} ${className}`.trim();
---

<textarea
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  disabled={disabled}
  rows={rows}
  class={classes}
  value={value}
></textarea>
